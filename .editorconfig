root = true

[*]
end_of_line              = lf
insert_final_newline     = true
charset                  = utf-8
trim_trailing_whitespace = true
max_line_length          = 80

[*.{py,yml,yaml,css,html,php,html.twig}]
indent_style             = space
indent_size              = 4

[*.{json,js}]
indent_style             = space
indent_size              = 2
